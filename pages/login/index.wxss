/* pages/login/index.wxss */
.container {
  padding-top: 0;
  display: flex;
}

.title {
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  font-size: large;
  font-weight: bold;
}

.login {
  padding: 0;
}

.former-item {
  height: 98rpx;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(232, 232, 232, 0.86);
  box-shadow: 0rpx 0rpx 2rpx -4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 48rpx;
  width: 550rpx;
}

.former-item image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 32rpx;
}

.former-item input {
  width: 100%;
}

.login button{
  margin-top: 40rpx;
  width: 100%;
  border-radius: 60rpx;
  background: linear-gradient(
    98deg, 
    rgba(0, 189, 214, 0.9) 0%, 
    rgb(0, 230, 238) 1%, 
    rgb(134, 255, 233) 100%
  );
  box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(0, 0, 0, 0.1);
  color: #ffffff;
  font-size: larger;
}

.fail-login{
  color: red;
  font-weight: bold;
  width: 400rpx;
  height: 100rpx;
  text-align: center;
  padding-top: 30rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
}
