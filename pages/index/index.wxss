/**index.wxss**/
page {
  background-color: #ffffff;
}

.container {
  padding: 48rpx 20rpx;
}

.logo {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo image {
  width: 450rpx;
  height: 350rpx;
  margin-bottom: 30rpx;
}

.nav-list {
  width: 100%;
  height: 176rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 0 24rpx -4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 70rpx;
  margin-top: 46rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nav-item image {
  width: 96rpx;
  height: 96rpx;
}

.nav-title {
  font-size: 24rpx;
  color: #3d3d3d;
  margin-top: 4rpx;
}

.today-course {
  width: 100%;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 0 24rpx -4rpx rgba(0, 0, 0, 0.1);
  margin-top: 30rpx;
  padding: 30rpx 30rpx 70rpx 30rpx;
}

.course-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
}

.option-title {
  font-family: 'SmileySans Oblique';
  font-size: 40rpx;
  color: #3e9c96;
  font-weight: 500;
  padding-left: 20rpx;
}

.option-time {
  font-family: 'SmileySans Oblique';
  font-size: 30rpx;
  color: #666666;
  padding-right: 30rpx; 
}

.course-box {
  margin-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.course-box .empty-img {
  width: 264rpx;
  height: 138rpx;
}

.empty-title {
  font-size: 26rpx;
  color: #999999;
  margin-top: 50rpx;
}

.course-list {
  width: 100%; 
}

.course-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx #d1d1d1 dashed;
}

.course-name {
  width: 50%;
  /* margin-right: 80rpx; */
  color: #3d3d3d;
}

.course-address {
  width: 20%;
  color: #838383;
  text-align: center;
}

.empty-course {
  padding: 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.course-name-title {
  /* width: 75%;
  margin-right: 120rpx; */
  color: #3d3d3d;
  font-weight: bold;
}

.course-address-title {
  /* width: 25%; */
  color: #3d3d3d;
  font-weight: bold;
}

.course-time {
  width: 35%;
  color: #5DEFE5;
}

.course-time-title {
  font-weight: bold;
}
